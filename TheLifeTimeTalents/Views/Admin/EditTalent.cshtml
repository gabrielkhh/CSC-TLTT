<script src="https://sdk.amazonaws.com/js/aws-sdk-2.0.0-rc1.min.js"></script>
@{
    ViewData["Title"] = "Edit Talent";
}
<div class="container body-content">
    <h2>@ViewData["Title"].</h2>


    <h4 id="txtDisplayName"></h4>
    <hr />

    <form id="myForm" data-toggle="validator">
        <div class="form-group">
            <label class="col-md-2 control-label">Talent Name</label>
            <div class="col-md-10">
                <text id="txtTalentName"></text>
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label">Short Name</label>
            <div class="col-md-10">
                <text id="txtShortName"></text>
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label">Reknown</label>
            <div class="col-md-10">
                <text id="txtReknown"></text>
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label">Bio</label>
            <div class="col-md-10">
                <text id="txtBio"></text>
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label">Private</label>
            <div class="col-md-10">
                <text id="txtPrivate"></text>
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label">Current Image</label>
            <div class="col-md-10">
                <img id="currentImage" class="thumbnail" />
            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label padding-top">Role</label>
            <div class="col-md-10 padding-top">
                <select class="selectpicker" id="roleValue">
                    <option value="1">Standard</option>
                    <option value="2">Premium</option>
                    <option value="3">Administrator</option>
                </select>

            </div>
        </div>

        <br /><br /><br />

        <div class="form-group">
            <label class="col-md-2 control-label padding-top-more">Ban Talent</label>
            <div class="col-md-10 padding-top-more">
                <input type="checkbox" id="ban" name="ban" value="ban">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 padding-top-more padding-bottom">
                <button id="btnUpdate" type="submit" class="btn btn-default">Update</button>
            </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/aws-sdk/2.94.0/aws-sdk.js"></script>
<script>

    $("[name='ban']").bootstrapSwitch();

    if (roleName === "Standard") {
        $("#roleValue").val(1);
    }
    else if (roleName === "Premium") {
        $("#roleValue").val(2);

    }
    else {
        $("#roleValue").val(3);
    }


    var g_userId = getIdFromAddressBar();

    function getIdFromAddressBar() {
        var urlArray = window.location.href.split('/');
        var userId = urlArray[urlArray.length - 1];
        return userId;
    }

    //console.log(g_userId);

    var idToken = sessionStorage.getItem('idToken');

    var isBan = false;
    var talentList = "";
    var talentName = "";
    var shortName = "";
    var reknown = ""
    var bio = "";
    var isPrivate = "";
    var imageUrl = "";
    var displayName = "";

    loadTalentData();

    function loadTalentData() {

        loadTalentDataHandler = jQuery.ajax({
            method: 'GET',
            url: 'http://server.anythingabout.me/API/Talents/GetForAdmin/' + g_userId,
            crossDomain: true,
            dataType: 'json',
            cache: false,
            beforeSend: function (xhr) {
                xhr.setRequestHeader('Authorization', 'bearer ' + idToken)
            }
        })
        loadTalentDataHandler.done(function (data, textStatus, jqXHR) {

            console.log(data);
            talentList = data;

            talentName = talentList.talentName;
            shortName = talentList.shortName;
            reknown = talentList.reknown;
            bio = talentList.bio;
            isPrivate = talentList.isPrivate;
            imageUrl = talentList.imageUrl;
            displayName = talentList.displayName;

            $('#txtTalentName').text(talentName);
            $('#txtShortName').text(shortName);
            $('#txtReknown').text(reknown);
            $('#txtBio').text(bio);
            $('#txtDisplayName').text("Talent uploaded by " + displayName);

            if (isPrivate == true) {
                $('#txtPrivate').text("Yes");
            }
            else {
                $('#txtPrivate').text("No");
            }

            $('#currentImage').attr('src', imageUrl);

        })
        loadTalentDataHandler.fail(function (data, textStatus, jqXHR) {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-bottom-left",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["error"]("There was an issue retrieving data from the server.", "Error")
        })
    }

    $(document).ready(function () {

        $("#btnUpdate").click(function () {

            event.preventDefault();

            swal({
                title: "Update Talent?",
                showCancelButton: true,
                closeOnConfirm: false,
                confirmButtonText: "Yes",
                cancelButtonText: "No",
                confirmButtonColor: "#F05F40",
                showLoaderOnConfirm: true,
            },
                function () {

                    AWS.config.update({
                        region: "us-west-2",
                        endpoint: 'dynamodb.us-west-2.amazonaws.com',
                        accessKeyId: "AKIAI6R6STURXVOILDOA",
                        secretAccessKey: "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"
                    });
                    var docClient = new AWS.DynamoDB.DocumentClient();
                    var params = {
                        TableName: "CSCSessions",
                        Key: {
                            "SessionId": idToken
                        }
                    };
                    docClient.get(params, function (err, data) {
                        if (err) {
                            console.log("Error occurred while retrieving Dynamo data.");
                        } else {
                            var retrievedSessionId = data.Item.SessionId;

                            if (idToken === retrievedSessionId) {

                                function WebFormData(inisBan, inRole) {
                                    this.IsBanned = isBan;
                                    this.RoleName = inRole;
                                }

                                var role = '';

                                var roleValue = $('#roleValue').val();

                                if (roleValue === "1") {
                                    role = "Standard"
                                }
                                else if (roleValue === "2") {
                                    role = "Premium"
                                }
                                if (roleValue === "3") {
                                    role = "Administrator"
                                }

                                if ($("#ban").is(':checked')) {
                                    isBan = true;
                                }
                                else {
                                    isBan = false;
                                }

                                var webFormData = new WebFormData(isBan, role);
                                var webFormDataInString = JSON.stringify(webFormData);

                                console.log(webFormDataInString);

                                $talentHandler = jQuery.ajax({
                                    type: 'PUT',
                                    url: 'http://server.anythingabout.me/API/Talents/UpdateForAdmin/' + g_userId,
                                    crossDomain: true,
                                    data: webFormDataInString,
                                    dataType: 'json',
                                    contentType: 'application/json',
                                    beforeSend: function (xhr) {
                                        xhr.setRequestHeader('Authorization', 'bearer ' + idToken)
                                    }
                                });

                                $talentHandler.done(function (data, textStatus, jqXHR) {

                                    swal({
                                        title: "Successful!",
                                        text: "Talent Updated!",
                                        type: "success",
                                        confirmButtonColor: "#F05F40",
                                    },
                                        function () {
                                            ignore = true;
                                            window.location.replace("/Admin/EditTalent");
                                        });

                                });

                                $talentHandler.fail(function (data, textStatus, jqXHR) {
                                    swal({
                                        title: "Error!",
                                        text: "Update Talent fail!",
                                        type: "error",
                                        confirmButtonColor: "#F05F40",
                                    });
                                });

                            }
                            else {
                                console.log("NOT AUTHORIZED");
                            }
                        }
                    });
                });
        });
    });
</script>
